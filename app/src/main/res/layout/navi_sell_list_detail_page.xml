<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5c927"
    tools:context="autobike.stanley.idv.android_autobike_v7.navigationlayout.Navi_Sell_List_Detail_Page">


    <ImageView
        android:id="@+id/ivSellDetailImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/banciao" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="42dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="訂單編號 : "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSellDetailRentNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="訂單編號 : "
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="42dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="車輛型號 : "
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tvSellDetailMotorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="車輛型號 : "
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="42dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下單時間 : "
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/tvSellDetailStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取車時間 : "
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="42dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款狀況 : "
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tvSellDetailStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="還車時間 : "
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sellord_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="canael"/>

</LinearLayout>
